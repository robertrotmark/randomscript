#!/usr/bin/bash
PATH=/bin:/usr/bin
#xtrace
#set -x
#Verbose
#set -v 

ff () {
 find / -type f -name *"$1"* -ls 2>/dev/null
}


match=$(ff allow)




for user in $( awk -F: '{ print $1 }' /etc/passwd | sort )
do
  who -a | grep "$user"
done

for user in $( awk -F: '{ print $1 }' /etc/passwd | sort )
do
  who -a | grep "$user"
done



myftp=$(sftp hostname <<myeof
cd dir1
mput *
quit
myeof)



ping -c 1 www.aftonbladet.se >pinglist 2>$1

find / -name '0411' 2>$1 | more






